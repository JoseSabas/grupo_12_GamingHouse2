<html>
    <head>
        <meta charset="UTF-8">
        <title>Gaming House</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://www.fontzip.com/storage/2017/12/27/ubisoft-sans/webfonts/ubisoftsans-bold.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
        <link rel="stylesheet" href="css/login.css">
    </head>
    <body>
        <header>
            <div class="logo">
                <a href="/" class="indexMobileNavA"><i class="fas fa-dice-d20"></i></a>
            </div>
        </header>

        <div class="slider">
            <ul>
                <li><img src="/images/login.jpeg" alt=""></li>
                <li><img src="/images/login2.jpg" alt=""></li>
                <li><img src="/images/login3.jpg" alt=""></li>
                <li><img src="/images/login4.jpg" alt=""></li>
                <li><img src="/images/login5.jpg" alt=""></li>
                <li><img src="/images/login6.jpg" alt=""></li>
            </ul>
        </div>

        <!-- <img src="/images/login.jpeg" class="imagenlogin" alt=""> -->

        <main>    

            <h2>¡Conectate!</h2>
            <h3>Ingresa tus datos:</h3>

            <form action="/" method="POST">
                <input type="text" name="user" placeholder="Nombre de usuario">
                <input type="password" name="pass" placeholder="Contraseña del usuario">
                <div class="recordar">
                    <input type="checkbox" name="interests" value="a" id="a">
                    <label for="a">¿Recordar contraseña?</label>
                  </div>
                <input type="submit" value="Enviar">
            </form>

            <a href="#">Se me olvido mi contraseña</a>

            <div class="tipo-ingreso">
                <h3>Entrar como:</h3>
                <div class="profile">
                    <div class="comprador">
                    <input type="radio" name="profile" value="buy" id="buy">
                    <label for="buy">Comprador</label>
                     </div>
                     <div class="vendedor">
                    <input type="radio" name="profile" value="sell" id="sell">
                    <label for="sell">Vendedor</label>
                    </div>
                </div>
            </div>
            
            <div class="opciones">
            <a href="/register">No tengo cuenta</a>
            <a href="/">regresar</a>
            </div>
        </main>

        <div class="footer">

            <nav class="indexMobileNav">

                <a href="/" class="indexMobileNavA"><i class="fas fa-home"></i></a>
                <a href="/login" class="indexMobileNavA"><i class="fas fa-user"></i></a>
                <a href="/carrito" class="indexMobileNavA"><i class="fas fa-shopping-cart"></i></a>
                <a href="#" class="indexMobileNavA"><i class="fas fa-bars"></i></a>

            </nav>

        </div>  
        
    </body>

    
</html>