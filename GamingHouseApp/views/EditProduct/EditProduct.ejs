<div class="NewP-container">
    
    <form action="/products/edit/<%= product.id %>?_method=PATCH" method="POST">

    <label for="section" class="NewP-text">Sección: </label>
    <select name="section" id="section" class="NewP-area">
        <option value=1>Monitor</option>
        <option value=2>Audífono</option>
        <option value=3>Teclado</option>
        <option value=4>Mouse</option>
        <option value=5>Bocina</option>
    </select>
    <br/><br/>
    <label for="name" class="NewP-text">Nombre: </label>
    <input type="text" id="name" name="name" placeholder="Nombre del producto" class="NewP-area"  value="<%= product.name %>"><br/><br/>
    
    <label for="desc" class="NewP-text">Descripción: </label>
    <textarea id="desc" name="desc" placeholder="Descripción del producto" class="NewP-area"><%= product.desc %></textarea> <br/> <br/>
 
    <label for="mark" class="NewP-text">Marca: </label>
    <input type="text" id="mark" name="mark" placeholder="Marca del producto" class="NewP-area" value="<%= product.mark %>"> <br/><br/>
    
    <label for="price" class="NewP-text">Precio: </label>
    <input type="number" id="price" name="price" min="1" placeholder="Precio del producto" class="NewP-area" value="<%= product.price %>"> <br/><br/>

    <div class="NewP-fila">
        <div class="NewP-column">
            <label for="img" class="NewP-text">Imágen: </label>
            <label class="NewP-button-image">
                <input type="file" id="img" name="img" accept=".jpg" >
            </label>
           
        </div>
         <div class="NewP-column">
        <img id="blah" src="<%= product.img %>" alt="your image" class="NewP-image"/>
        </div>
    </div>
  
    <br/><br/> <br/><br/>
    
    <button type="submit" class="NewP-button">Guardar producto</button>
</form>
    <form action="/products/delete/<%= product.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Realmente desea eliminar este producto');">
        <button type="submit" class="NewP-button NewP-button-Red">Eliminar producto</button>
    </form>
   
</div>



<script>
      img.onchange = evt => {
  const [file] = img.files
  if (file) {
    blah.src = URL.createObjectURL(file)
  }
}


</script>