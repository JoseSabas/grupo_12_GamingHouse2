<form action="/products/edit/<%= product.id %>?_method=PATCH" method="POST">
    <label for="section">Sección: </label>
    <select name="section" id="section">
        <option value="1">Monitor</option>
        <option value="2">Audífono</option>
        <option value="3">Teclado</option>
        <option value="4">Mouse</option>
        <option value="5">Bocina</option>
    </select>
    <br/>
    <label for="name">Nombre: </label>
    <input type="text" id="name" name="name" placeholder="Nombre del producto" value="<%= product.name %>">
    <br/>
    <label for="desc">Descripción: </label>
    <textarea id="desc" name="desc" placeholder="Descripción del producto"><%= product.desc %></textarea>
    <br/>
    <img src="<%= product.img %>"><br/>
    <label for="img">Imágen: </label>
    <input type="file" id="img" name="img" accept=".jpg">
    <br/>
    <label for="mark">Marca: </label>
    <input type="text" id="mark" name="mark" placeholder="Marca del producto" value="<%= product.mark %>">
    <br/>
    <label for="price">Precio: </label>
    <input type="number" id="price" name="price" min="1" placeholder="Precio del producto" value="<%= product.price %>">
    <br/>
    <button type="submit">Guardar producto</button>
</form>

<form action="/products/delete/<%= product.id %>?_method=DELETE" method="POST">
    <button type="submit">Eliminar producto</button>
</form>