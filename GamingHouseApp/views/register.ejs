<html>
    <head>
        <meta charset="UTF-8">
        <title>Gaming House</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://www.fontzip.com/storage/2017/12/27/ubisoft-sans/webfonts/ubisoftsans-bold.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
        <link rel="stylesheet" href="css/register.css">
    </head>
    <body>
        <header>
            <div class="logo">
                <a href="/" class="indexMobileNavA"><i class="fas fa-dice-d20"></i></a>
            </div>
        </header>

        <main>    

            <h2>¡Registrate!</h2>
            <h3>Ingresa tus datos:</h3>

            <form action="/" method="POST">
                <div class="informacion">
                    <input type="text" name="name" placeholder="Nombre y apellido">
                    <input type="text" name="user" placeholder="Nombre de usuario">
                    <input type="email" name="email" placeholder="E-mail">
            
                    <label class="nacimiento" for="birth_date"><h3>Fecha de nacimiento</h3></label>
                    
                    <input type="date" name="birth_date" id="birth_date">
                    
                    <input type="text" name="addres" placeholder="Domicilio">
                </div>

                <h3>Elegí tu foto de usuario</h3>

                <div class="info_usuario">
                <input type="file" name="avatar">
                <br>
                <br>
                <input type="password" name="pass" placeholder="Elegí tu contraseña">
                <input type="password" name="pass_confirm" placeholder="Confirmá tu contraseña">
                <br>
                <br>
                <input type="submit" value="Enviar">
                <input type="reset" value="Borrar">
                <br>
                <br>
                </div>
            </form>

            <div class="tipo-ingreso">
                <h3>Entrar como:</h3>
                <div class="profile">
                    <div class="comprador">
                    <input type="radio" name="profile" value="buy" id="buy">
                    <label for="buy">Comprador</label>
                     </div>
                     <div class="vendedor">
                    <input type="radio" name="profile" value="sell" id="sell">
                    <label for="sell">Vendedor</label>
                    </div>
                </div>
            </div>
            
            <div class="opciones">
            <a href="/login">Ya tengo cuenta</a>
            <a href="/">regresar</a>
            </div>
        </main>

        <div class="slider">
            <ul>
                <li><img src="/images/login.jpeg" alt=""></li>
                <li><img src="/images/login2.jpg" alt=""></li>
                <li><img src="/images/login3.jpg" alt=""></li>
                <li><img src="/images/login4.jpg" alt=""></li>
                <li><img src="/images/login5.jpg" alt=""></li>
                <li><img src="/images/login6.jpg" alt=""></li>
            </ul>
        </div>

        <div class="footer">

            <nav class="indexMobileNav">

                <a href="/" class="indexMobileNavA"><i class="fas fa-home"></i></a>
                <a href="/login" class="indexMobileNavA"><i class="fas fa-user"></i></a>
                <a href="/carrito" class="indexMobileNavA"><i class="fas fa-shopping-cart"></i></a>
                <a href="#" class="indexMobileNavA"><i class="fas fa-bars"></i></a>

            </nav>

        </div>  
    </body>
</html>